{
  "layer": "top", // Waybar at top layer
  "position": "top", // Waybar position (top|bottom|left|right)
  "height": 34, // Waybar height (to be removed for auto height)
  // "width": 1280, // Waybar width
  "spacing": 4, // Gaps between modules (4px)
  "margin": 4,

  "modules-left": [
    "custom/wofi",
    "hyprland/workspaces",
    "custom/media",
    "tray"
  ],
  "modules-center": [
    "hyprland/window"
  ],
  "modules-right": [
